[Unit]
Description=Emacs: the extensible, self-documenting text editor
Documentation=man:emacs(1) info:Emacs


[Service]
Type=forking
Environment='XMODIFIERS=""'
ExecStart=/home/wilk/git-repositories/emacs/src/emacs --daemon
ExecStop=/home/wilk/git-repositories/emacs/lib-src/emacsclient --eval "(progn (setq kill-emacs-hook daemon-kill-emacs-hook) (kill-emacs))"
Restart=on-failure
Environment=DISPLAY=:%i
TimeoutStartSec=0

[Install]
WantedBy=default.target
