[general]
accounts = FreeOffline,GmailOffline
maxsyncaccounts = 4

[Account FreeOffline]
localrepository = FreeLocal
remoterepository = FreeRemote
autorefresh = 1
synclabels = yes
maxage = 365

[Repository FreeLocal]
type = Maildir
localfolders = ~/Maildir/Free/
# preauthtunnel = /usr/lib/dovecot/imap -o mail_location=maildir:$HOME/Maildir/Free:LAYOUT=fs
# preauthtunnel = /usr/lib/dovecot/imap -c $HOME/.dovecotrc

[Repository FreeRemote]
type = IMAP
remotehost = imap.free.fr
remoteuser = j.cubizolles
# folderfilter = lambda foldername: foldername not in ['anciens']
folderfilter = lambda foldername: foldername in ['General']
realdelete = no
holdconnectionopen = true
keepalive = 60

[Account GmailOffline]
localrepository = GmailLocal
remoterepository = GmailRemote
autorefresh = 1
synclabels = yes
maxage = 365

[Repository GmailLocal]
type = Maildir
localfolders = ~/Maildir/Gmail/
# preauthtunnel = /usr/lib/dovecot/imap /usr/lib/dovecot/imap -o mail_location=maildir:$HOME/Maildir/Gmail:LAYOUT=fs
# preauthtunnel = /usr/lib/dovecot/imap -c $HOME/.dovecotrc

[Repository GmailRemote]
type = Gmail
remoteuser = j.cubizolles@gmail.com
folderfilter = lambda foldername: foldername in ['General']
realdelete = no
holdconnectionopen = true
keepalive = 60
sslcacertfile = /etc/ssl/certs/ca-certificates.crt


